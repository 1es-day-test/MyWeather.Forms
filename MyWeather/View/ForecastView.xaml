<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:MyWeather.Cell;assembly=MyWeather"
             x:Class="MyWeather.View.ForecastView"
             Title="Forecast">
  <ContentPage.Resources>
    <ResourceDictionary>
      <templates:WeatherTemplateSelector x:Key="WeatherTemplateSelector"/>
    </ResourceDictionary>
  </ContentPage.Resources>
    <ListView ItemsSource="{Binding ForecastItems}"
              ItemTemplate="{StaticResource WeatherTemplateSelector}"
              HasUnevenRows="True"
              CachingStrategy="RecycleElement"
              IsPullToRefreshEnabled="True"
              RefreshCommand="{Binding GetWeatherCommand}"
              IsRefreshing="{Binding IsBusy, Mode=OneWay}"
              RowHeight="66"
              x:Name="ListViewWeather">
        <ListView.SeparatorColor>
            <OnPlatform x:TypeArguments="Color" iOS="Transparent"/>
        </ListView.SeparatorColor>
    </ListView>
</ContentPage>


