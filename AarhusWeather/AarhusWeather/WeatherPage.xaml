<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="AarhusWeather.WeatherPage"
  Title ="Amazing Weather App!">
  
<StackLayout>

  <Entry x:Name="MyEntry" Text ="{Binding Location, Mode=TwoWay}"/>
  <Button Command="{Binding GetWeather}" Text="Get Weather"/>
  
	<Label Text="{Binding Temp}" 
         VerticalOptions="Center" 
HorizontalOptions="Center" />
        	<Label Text="{Binding Condition}" 
         VerticalOptions="Center" 
HorizontalOptions="Center" />
</StackLayout>
</ContentPage>